{
  "$kind": "Microsoft.Test.Script",
  "dialog": {
    "$kind": "Microsoft.AdaptiveDialog",
    "id": "AdaptiveDialog",
    "recognizer": {
      "$kind": "Microsoft.RegexRecognizer",
      "intents": [
        {
          "$kind": "Microsoft.IntentPattern",
          "intent": "Interruption",
          "pattern": "(?i)interrupt"
        },
        {
          "$kind": "Microsoft.IntentPattern",
          "intent": "Start",
          "pattern": "(?i)start"
        }
      ]
    },
    "generator": {
      "$kind": "Microsoft.TemplateEngineLanguageGenerator",
      "id": "",
      "lgText": ""
    },
    "triggers": [
      {
        "$kind": "Microsoft.OnIntent",
        "intent": "Start",
        
        "actions": [
          {
            "$kind": "Microsoft.TextInput",
            "allowInterruptions": "True",
            "property": "user.name",
            "prompt": "What is your name?"
          },
          {
            "$kind": "Microsoft.SendActivity",
            "activity": "I have @{user.name} as your name"
          }
        ]
      },
      {
        "$kind": "Microsoft.OnIntent",
        "intent": "Interruption",
        
        "actions": [
          {
            "$kind": "Microsoft.SendActivity",
            "activity": "In Interruption..."
          },
          {
            "$kind": "Microsoft.SetProperty",
            "property": "turn.interrupted",
            "value": "False"
          }
        ]
      }
    ],
    "AutoEndDialog": true,
    "defaultResultProperty": "dialog.result"
  },
  "script": [
    {
      "$kind": "Microsoft.Test.UserSays",
      "text": "start"
    },
    {
      "$kind": "Microsoft.Test.AssertReply",
      "text": "What is your name?"
    },
    {
      "$kind": "Microsoft.Test.UserSays",
      "text": "interrupt"
    },
    {
      "$kind": "Microsoft.Test.AssertReply",
      "text": "In Interruption..."
    },
    {
      "$kind": "Microsoft.Test.AssertReply",
      "text": "I have interrupt as your name"
    }
  ]
}